{
  "schemaVersion": 1,
  "id": "rad",
  "version": "${version}",

  "name": "Reload Audio Driver",
  "description": "Reloads the audio driver when pressing F3 + R.",
  "authors": [
    "CJMinecraft01", "JayJay1989BE"
  ],
  "contact": {
    "homepage": "https://github.com/CJMinecraft01",
    "sources": "https://github.com/CJMinecraft01/ReloadAudioDriverFabric",
    "issues" : "https://github.com/CJMinecraft01/ReloadAudioDriverFabric/issues"
  },

  "license": "MIT",
  "icon": "assets/rad/logo.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "cjminecraft.rad.ReloadAudioDrivers"
    ]
  },
  "mixins": [
    "rad.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.15.x"
  },
  "suggests": {
    "flamingo": "*"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  },
  "accessWidener" : "rad.accesswidener"
}
